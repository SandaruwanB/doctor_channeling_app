<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suwasetha | Book Appointment</title>
    <%- include('components/mainCSS') %>
</head>
<body>
    <%- include('components/preloader') %>
    <%- include('layouts/headerMain') %>

    <div class="breadcrumbs overlay">
        <div class="container">
            <div class="bread-inner">
                <div class="row">
                    <div class="col-12">
                        <h2>Book Appointment</h2>
                        <ul class="bread-list">
                            <li><a href="/">Home</a></li>
                            <li><i class="icofont-simple-right"></i></li>
                            <li class="active">Book Appointment</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="appointment">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>We Are Always Ready to Help You. Book An Appointment</h2>
                        <img src="/images/main/section-img.png" alt="#">
                        <p>Please Choose doctor to get start</p>
                    </div>
                </div>
            </div>
            <div class="row gx-5 mb-5">
                <% if (doctors.length > 0 ){ %>
                    <% for (const doctor of doctors){ %>
                        <div class="col-md-3 col-lg-3 col-xl-3 col-sm-1 g-3 mb-5">
                            <div class="text-center p-3" style="border: 2px solid #1a76d1; border-radius: 10px;"> 
                                <img src="/images/doctor.png" alt="doctor" style="border-radius: 50%;">
                                <span style="display: block; margin-top: 3px; font-weight: bold;">Dr.<%= doctor.firstName + " " + doctor.lastName %></span>
                                <span style="display: block;"><%= doctor.specializedIn %></span>
                                <a href="/apoinment/book/<%= doctor.id %>"><button class="btn mt-3">Channel</button></a>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="alert alert-info text-center mb-5">Doctors not available this moment! please stay touch</div>
                <% } %>
            </div>
        </div>
    </section>
    <%- include('layouts/footerMain') %>
    <%- include('components/mainJS') %>

</body>
</html>