<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>Suwasetha | Manage Doctors</title>
        <%- include('components/cssIncludes') %>
    </head>
    <body class="sb-nav-fixed">
        <%- include('layouts/topnavbar') %>
        <div id="layoutSidenav">
            <%- include('layouts/navbar') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Patients</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active"><a style="text-decoration: none;" href="/admin/dashboard">Dashboard</a> / Patients</li>
                        </ol>
                        <div class="mt-1 mb-3">
                            <a href="/admin/patients/add"><button class="add-new-btn"><i class="fa-solid fa-plus"></i>&nbsp;Add New</button></a>
                        </div>
                        <div class="card mb-4">
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Contact</th>
                                            <th>Address</th>
                                            <th>Age</th>
                                            <th>Gender</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (patientDetails.length > 0) { %>
                                            <% for (const details of patientDetails){ %>
                                                <tr>
                                                    <td><%= details.name %></td>
                                                    <td><%= details.email %></td>
                                                    <td><%= details.mobile %></td>
                                                    <td><%= details.address %></td>
                                                    <td><%= details.age %></td>
                                                    <td><%= details.gender %></td>
                                                    <td>
                                                        <a href="/admin/patients/edit/<%= details.id %>"><button class="edit-btn"><i class="fa-solid fa-pen-to-square"></i></button></a>
                                                        <form action="/admin/patients/remove/<%= details.id %>" method="post" class="action-buttons"><button type="submit" class="delete-btn"><i class="fa-solid fa-trash"></i></button></form>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        <% } else { %>
                                            <tr>
                                                <td style="text-align: center; color: gray;" colspan="7">No patients found</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <%- include('components/jsIncludes') %>
    </body>
</html>
