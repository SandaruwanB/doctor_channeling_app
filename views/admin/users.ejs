<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>Suwasetha | Manage Users</title>
        <%- include('components/cssIncludes') %>
    </head>
    <body class="sb-nav-fixed">
        <%- include('layouts/topnavbar') %>
        <div id="layoutSidenav">
            <%- include('layouts/navbar') %>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Users</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active"><a style="text-decoration: none;" href="/admin/dashboard">Dashboard</a> / Users</li>
                        </ol>
                        <div class="mt-1 mb-3">
                            <a href=""><button class="add-new-btn"><i class="fa-solid fa-plus"></i>&nbsp;Add New</button></a>
                        </div>
                        <div class="card mb-4">
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>email</th>
                                            <th>Contact</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (users.length == 1 || users.length == 0) { %>
                                            <tr>
                                                <td colspan="6" style="text-align: center; color: gray;">Users not found</td>
                                            </tr>
                                        <% }else{ %>
                                            <% for (const user of users){ %>
                                                <% if (user.email != current){ %>
                                                    <tr>
                                                        <td><%= user.firstName + " " + user.lastName %></td>
                                                        <td><%= user.email %></td>
                                                        <td><%= user.contact %></td>
                                                        <td><%= user.address %></td>
                                                        <td>
                                                            <a href="/admin/users/edit/<%= user.id %>"><button class="edit-btn"><i class="fa-solid fa-pen-to-square"></i></button></a>
                                                            <form action="" method="post" class="action-buttons"><button type="submit" class="delete-btn"><i class="fa-solid fa-trash"></i></button></form>
                                                        </td>
                                                    </tr> 
                                                <% } %>
                                            <% } %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>

        <%- include('components/jsIncludes') %>
    </body>
</html>
